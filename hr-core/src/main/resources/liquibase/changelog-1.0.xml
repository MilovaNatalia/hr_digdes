        <createTable tableName="users" schemaName="hr_digdes_schema">
            <column name="username" type="varchar(250)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="bigint">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="natalia" id="addForeignKeyConstraints">
        <addForeignKeyConstraint baseColumnNames="department_id"
                                 baseTableName="employees"
                                 baseTableSchemaName="hr_digdes_schema"
                                 constraintName="fk_employee_department"
                                 referencedColumnNames="id"
                                 referencedTableName="departments"
                                 referencedTableSchemaName="hr_digdes_schema"/>
        <addForeignKeyConstraint baseColumnNames="position_id"
                                 baseTableName="employees"
                                 baseTableSchemaName="hr_digdes_schema"
                                 constraintName="fk_employee_position"
                                 referencedColumnNames="id"
                                 referencedTableName="positions"
                                 referencedTableSchemaName="hr_digdes_schema"/>
        <addForeignKeyConstraint baseColumnNames="type_id"
                                 baseTableName="departments"
                                 baseTableSchemaName="hr_digdes_schema"
                                 constraintName="fk_department_type"
                                 referencedColumnNames="id"
                                 referencedTableName="department_types"
                                 referencedTableSchemaName="hr_digdes_schema"/>
        <addForeignKeyConstraint baseColumnNames="head_id"
                                 baseTableName="departments"
                                 baseTableSchemaName="hr_digdes_schema"
                                 constraintName="fk_department_head"
                                 referencedColumnNames="id"
                                 referencedTableName="employees"
                                 referencedTableSchemaName="hr_digdes_schema"/>
        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="departments"
                                 baseTableSchemaName="hr_digdes_schema"
                                 constraintName="fk_department_department"
                                 referencedColumnNames="id"
                                 referencedTableName="departments"
                                 referencedTableSchemaName="hr_digdes_schema"/>
        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="users"
                                 baseTableSchemaName="hr_digdes_schema"
                                 constraintName="fk_user_employee"
                                 referencedColumnNames="id"
                                 referencedTableName="employees"
                                 referencedTableSchemaName="hr_digdes_schema"/>
    </changeSet>
    <changeSet author="natalia" id="addProcedureUpdatePath">
        <createProcedure>
        CREATE OR REPLACE FUNCTION update_section_parent_path() RETURNS TRIGGER AS $$
            DECLARE
                parent_path ltree;
            BEGIN
                IF NEW.parent_id IS NULL THEN
                    NEW.path = 'root'::ltree;
                ELSEIF TG_OP = 'INSERT' OR OLD.parent_id IS NULL OR OLD.parent_id != NEW.parent_id THEN
                    SELECT path || id::text FROM hr_digdes_schema.departments WHERE id = NEW.parent_id INTO parent_path;
                    IF parent_path IS NULL THEN
                        RAISE EXCEPTION 'Invalid parent_id %', NEW.parent_id;
                    END IF;
                    NEW.path = parent_path;
                END IF;
                RETURN NEW;
            END;
        $$ LANGUAGE plpgsql;
        </createProcedure>
        <rollback>
            <sql>
                drop function update_section_parent_path()
            </sql>
        </rollback>
    </changeSet>
    <changeSet author="natalia" id="addUpdatePathTrigger">
        <sql>
            DROP TRIGGER IF EXISTS parent_path_tgr ON hr_digdes_schema.departments;
            CREATE TRIGGER parent_path_tgr
                BEFORE INSERT OR UPDATE ON hr_digdes_schema.departments
                    FOR EACH ROW EXECUTE PROCEDURE update_section_parent_path();
        </sql>
        <rollback>
            DROP TRIGGER parent_path_tgr ON hr_digdes_schema.departments;
        </rollback>
    </changeSet>
</databaseChangeLog>
