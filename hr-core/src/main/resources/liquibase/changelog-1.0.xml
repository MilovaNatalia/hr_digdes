            <column name="email" type="varchar(250)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="department_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="position_id" type="bigint">
                <constraints nullable="false"/>
            </column>
